{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@common-utils": ["../common-utils"],
      "@common-utils/*": ["../common-utils/*"],
      "@main": ["."],
      "@main/*": ["./*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "../build-time-constants/global.d.ts",
    "../build-time-constants/main.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "renderer/next.config.js", "app", "dist"]
}
